{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@ui-src/*": ["ui-src/*"],
      "@api-src/*": ["api-src/*"]
    },
    "module": "nodenext",
    "target": "es6",
    "moduleResolution": "nodenext",
    "experimentalDecorators": true,
    "jsx": "react"
  },
  "include": [ "api-src/**/*" ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]  
}
